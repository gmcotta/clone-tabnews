{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Reposit√≥rio sobre o projeto do curso.dev, do Filipe Deschamps.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait-database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently --names next,jest --hide next --kill-others --success command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "services:wait-database": "node infra/scripts/wait-for-pg.js",
    "services:up": "cp .env.development infra/.env && docker compose -f infra/compose.yaml up -d --force-recreate",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix .",
    "commit": "cz",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gmcotta/clone-tabnews.git"
  },
  "author": "Gustavo Matias",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gmcotta/clone-tabnews/issues"
  },
  "homepage": "https://github.com/gmcotta/clone-tabnews#readme",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "17.2.3",
    "next": "16.0.1",
    "pg": "8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "dotenv-expand": "12.0.3",
    "eslint": "9.39.0",
    "eslint-config-next": "16.0.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-no-secrets": "2.2.1",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.6",
    "node-pg-migrate": "8.0.3",
    "prettier": "3.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
