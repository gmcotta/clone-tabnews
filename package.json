{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Reposit√≥rio sobre o projeto do curso.dev, do Filipe Deschamps.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run compose:up && npm run wait-for-pg && npm run migration:up && next dev",
    "wait-for-pg": "node infra/scripts/wait-for-pg.js",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix .",
    "test": "npm run compose:up && concurrently --names next,jest --hide next --kill-others --success command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "compose:up": "cp .env.development infra/.env && docker compose -f infra/compose.yaml up -d --force-recreate",
    "compose:stop": "docker compose -f infra/compose.yaml stop",
    "compose:down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "prepare": "husky",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gmcotta/clone-tabnews.git"
  },
  "author": "Gustavo Matias",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gmcotta/clone-tabnews/issues"
  },
  "homepage": "https://github.com/gmcotta/clone-tabnews#readme",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.4",
    "next": "^13.1.6",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "commitizen": "^4.3.0",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-expand": "^11.0.6",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.4",
    "jest": "^29.6.2",
    "lint-staged": "^16.2.6",
    "node-pg-migrate": "^6.2.2",
    "prettier": "^3.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
